{
  "name": "theopetra-reat",
  "version": "1.0.1",
  "description": "A smart contract implementation of the Proof of Transfer consensus mechanism, allowing for the mining and Stacking of a new fungible token on the Stacks blockchain with a portion of miner rewards goign to Theopetra non profit",
  "scripts": {
    "test": "npm run clarinet:test",
    "test:token": "npm run clarinet:prepare && clarinet test ./tests/theopetra-reat-token.test.ts",
    "test:core": "npm run clarinet:prepare && clarinet test ./tests/theopetra-reat-core-v1.test.ts",
    "test:auth": "npm run clarinet:prepare && clarinet test ./tests/theopetra-reat-auth.test.ts",
    "clarinet:check": "npm run clarinet:prepare && clarinet check",
    "clarinet:test": "npm run clarinet:prepare && clarinet test",
    "clarinet:codecov": "npm run clarinet:prepare && clarinet test --coverage",
    "clarinet:console": "npm run clarinet:prepare && clarinet console",
    "clarinet:prepare": "./scripts/clarinet-prepare.sh",
    "console": "npm run clarinet:console"
  }
}
